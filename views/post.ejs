<%- include('partials/_header') -%>

<body>

  <!-- Navigation -->
  <%- include('partials/_nav') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= blog.title %> </h1>
            <h2 class="subheading"><%= blog.detail %> </h2>
            <span class="meta">Posted by
              <a href="#"> <%= blog.author %></a>
              <%= blog.dateCreated %></span>
          </div>
        </div>
      </div>
    </div>
  </header>
  <div class="clearfix">

    <a class="btn btn-danger float-right" href="/blogs/<%= blog._id %>?_method=DELETE"
       onclick="return confirm('ARE YOU SURE?')">Delete Post</a>
    <a class="btn btn-warning float-right text-white mr-3" href="/blogs/edit/<%= blog._id %>">Update Post</a>

  </div>

  <hr>

  <%- include('partials/_footer') -%>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
